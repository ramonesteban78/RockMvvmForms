<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="MarvelRockSample.DetailView"
Title="{Binding Character.Name}">
	<ContentPage.Content>
		<Grid  BackgroundColor="#F44336">
			<Grid.RowDefinitions>
				<RowDefinition Height="320"></RowDefinition>
				<RowDefinition Height="*"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
			</Grid.RowDefinitions>

<!--			<control.ImageCircle Source="{Binding Character.Thumbnail}" 
				Grid.Row="0" 
				HorizontalOptions="FillAndExpand" 
				VerticalOptions="FillAndExpand" 
				Aspect="Fill">
			</control.ImageCircle>-->

			<Image Source="{Binding Character.Thumbnail}" 
				Grid.Row="0" 
				HorizontalOptions="FillAndExpand" 
				VerticalOptions="FillAndExpand" 
				Aspect="Fill">
			</Image>

			<ContentView Grid.Row="1" Padding="5,5,5,5">
				<Label Text="{Binding Character.Description}" 
				HorizontalOptions="FillAndExpand" 
				VerticalOptions="FillAndExpand" 
				FontSize="13"
				TextColor="#FFFFFF"></Label>
			</ContentView>

			<StackLayout Padding="10" Grid.Row="2">
				<Button Text="Open Web" TextColor="White" Command="{Binding OpenWeb}"></Button>
			</StackLayout>


		</Grid>
	</ContentPage.Content>
</ContentPage>
